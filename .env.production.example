NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=aqua_user
DB_PASSWORD=aqua_password
DB_DATABASE=aqua_thistle_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# n8n
N8N_WEBHOOK_BASE_URL=https://your-n8n-host
N8N_FINANCE_ASSISTANT_WEBHOOK=/webhook/finance-assistant
N8N_API_KEY=replace-with-shared-secret

# CORS
CORS_ORIGIN=https://your-frontend
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTLs (seconds)
CACHE_TTL_DASHBOARD=60
CACHE_TTL_CALCULATIONS=300
CACHE_TTL_CONVERSATIONS=3600
