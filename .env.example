# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=aqua_user
DB_PASSWORD=aqua_password
DB_DATABASE=aqua_thistle_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key
JWT_REFRESH_EXPIRES_IN=7d

# n8n Configuration
N8N_WEBHOOK_BASE_URL=http://localhost:5678
N8N_FINANCE_ASSISTANT_WEBHOOK=/webhook/finance-assistant
N8N_API_KEY=

# OpenAI Configuration (for reference - used in n8n)
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this
SESSION_MAX_AGE=86400000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Cache Configuration
CACHE_TTL_DASHBOARD=60
CACHE_TTL_CALCULATIONS=300
CACHE_TTL_CONVERSATIONS=3600
